class Email {

  var $to;
  var $from;
  var $subject;
  var $headers;
  var $body;

  /*
   * Class initialization
   */
  function Email() {
    global $_SERVER;
    global $_SESSION;
    global $_REQUEST;
    global $_POST;
    global $_GET;
    $this->to      = 'tony@awtrey.com';
    $this->from    = 'webmaster@awtrey.com';
    $this->subject = '';
    $this->headers = '';
    $this->body    = '';
  }

  function _checkEmail($inEmail) {
    if( preg_match("/^( [a-zA-Z0-9] )+( [a-zA-Z0-9\._-] )*@( [a-zA-Z0-9_-] )+( [a-zA-Z0-9\._-] +)+$/" , $inEmail) ){
      list($username,$domain)=split('@',$inEmail);
      if( !checkdnsrr($domain,'MX') ) {
        return false;
      }
      return true;
    }
    return false;
  }

  function setTo($inTo) {
    if ( $this->_checkEmail($inTo) ) {
      return false;
    }
    $this->to = $inTo;
    return true;
  }

  function getTo() {
    return $this->to;
  }

  function setFrom($inFrom) {
    if ( $this->_checkEmail($inFrom) ) {
      return false;
    }
    $this->from = $inFrom;
    return true;
  }

  function getFrom() {
    return $this->from;
  }

  function setSubject($inSubject) {
    $this->subject = $inSubject;
    return true;
  }

  function getSubject() {
    return $this->subject;
  }

  function setHeaders($inHeaders) {
    $this->headers = $inHeaders;
    return true;
  }

  function getHeaders() {
    return $this->headers;
  }

  function setBody($inBody) {
    $this->body = $inBody;
    return true;
  }

  function getBody() {
    return $this->body;
  }

  function send() {
    if ( $this->getFrom() != '' ) {
      $this->setHeaders( 'From: ' . $this->getFrom() . "\r\n" . 'Reply-To: ' . $this->getFrom() . "\r\n" );
    }
    return mail( $this->getTo(), $this->getSubject(), $this->getBody(), $this->getHeaders() );
  }

}

?>
